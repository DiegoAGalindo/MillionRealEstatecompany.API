{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "DatabaseSettings": {
    "CommandTimeout": 60,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "ApiSettings": {
    "Title": "Million Real Estate Company API",
    "Version": "v1.0",
    "Description": "Production API for managing real estate properties, owners, images and transaction traces",
    "ContactName": "Million Real Estate Company",
    "ContactEmail": "api-support@million.com"
  }
}